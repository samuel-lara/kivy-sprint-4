MDScreen:
    MDTopAppBar:
        title: "PymeShield"
        elevation: 4
        pos_hint: {"top": 1}
        md_bg_color: "#ff6720"
        specific_text_color: "black"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
    
#menu desplegable
    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "Inicio"
                MDLabel:
                    text:"Bienvenido a Pymeshield, haz click en el menú para navegar entre secciones"
                    halign: "center"
                    font_style: "H3"

            MDScreen:
                name: "Tareas"
                MDBoxLayout:
                    orientation: 'vertical'
                    padding:0, 70, 0, 0
                    SearchE4:
                        id: search_item
                        hint_text: "Buscar..."
                        halign: "center"
                        on_text: self.calc(self.text)
                    MDScrollView:
                        MDList:
                            id: tareas  

            MDScreen:
                name: "DetallesTarea"
                MDBoxLayout:
                    padding:0, 70, 0, 0
                    MDLabel:
                        id: desc
                        text:"Bienvenido a Pymeshield, haz click en el menú para navegar entre secciones"
                        halign: "center"
                        font_style: "H3"
                    MDScrollView:
                        MDList:
                            id: detalles 

            

            MDScreen:
                name: "Presupuesto"
                MDBoxLayout:
                    orientation: 'vertical'
                    
                    MDScrollView:
                        MDList:
                            id: presupuesto 
                             
                        MDTextField:
                            id: search_box
                            hint_text: "Buscar..."
                            size_hint_x: 0.8
                            pos_hint: {'center_x': 0.5}

                        MDList:
                            id: search_results
                            size_hint_y: 0.8
                            pos_hint: {'center_x': 0.5}
            
            MDScreen:
                name: "DetallesPresupuesto"
                MDBoxLayout:
                    padding:0, 70, 0, 0
                    MDLabel:
                        id: preudata
                        text:"Bienvenido a Pymeshield, haz click en el menú para navegar entre secciones"
                        halign: "center"
                        font_style: "H3"
                    MDScrollView:
                        MDList:
                            id: detallesPre 

            MDScreen:
                name: "Gantt"
                Image:
                    source: 'img/gantt.png'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size: "48dp", "48dp"
                    
            
            MDScreen:
                name: "Listado tareas"
                MDBoxLayout:
                    MDScrollView:
                        pos_hint: {'center_y': .42, 'x': .0}
                        
                        MDList:
                            id: container


            MDScreen:
                name: "Contacto"
                MDLabel:
                    text:"Si tienes cualquier duda envía un email a: support@pymeralia.com"
                    halign: "center"
                    font_style: "H3"

                            

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical' 
                ContentNavigationDrawer:
                    manager: screen_manager
                    nav_drawer: nav_drawer
                    
<ContentNavigationDrawer>:
    MDNavigationDrawerMenu:
        MDNavigationDrawerHeader:
            title: "Pymeshield"
            title_font_style: "H5"
            text: "Menú"
            source: "img/logo.png"
            spacing: "16dp"
            padding: "12dp", 0, 0, "56dp"
        DrawerClickableItem:
            text: "Inicio"
            icon: "home"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Inicio"

        DrawerClickableItem:
            text: "Informes"
            icon: "file-document"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Informe"     

        DrawerClickableItem:
            text: "Tareas"
            icon: "clipboard-list"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Tareas"  

        DrawerClickableItem:
            text: "Presupuesto"
            icon: "chart-gantt"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Presupuesto"  

        DrawerClickableItem:
            icon: "book-education"
            text: "Cursos"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Cursos" 

        DrawerClickableItem:
            icon: "email"
            text: "Contacto"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="Contacto"

        DrawerClickableItem:
            text: "QR"
            icon: "qrcode-scan"
            on_release: 
                root.nav_drawer.set_state("close")
                root.manager.current="QR" 
        


<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#efb58c"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#ff6720"

<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
